---
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
export interface Props {
  title?: string;
  description?: string;
}
const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml" />
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>⚙️</text></svg>">
    <meta name="color-scheme" content="dark light" />
    <style>
      :root { --bg: #0d0f11; --fg: #e4e6eb; --accent: #5ea1ff; --code:#1e1f22; --border:#22262b; font-family: system-ui,-apple-system,Segoe UI,Roboto,Inter,sans-serif; }
      body { margin:0; background:var(--bg); color:var(--fg); line-height:1.55; -webkit-font-smoothing: antialiased; }
      a { color: var(--accent); text-decoration:none; }
      a:hover { text-decoration:underline; }
      main { max-width: 840px; padding: 2.5rem 1.25rem 4rem; margin: 0 auto; }
      h1,h2,h3 { line-height:1.15; }
      pre, code { font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, "Liberation Mono", monospace; }
      code { background: var(--code); padding: 2px 5px; border-radius:4px; }
      .callout { border:1px solid var(--border); background:#14181d; padding:1rem 1rem; border-radius:8px; }
      footer.site-footer { border-top:1px solid var(--border); margin-top:3rem; font-size:0.85rem; }
      footer .footer-inner { max-width:840px; padding:2rem 1.25rem; margin:0 auto; display:grid; gap:0.75rem; }
      .footer-nav, .social-links { display:flex; flex-wrap:wrap; gap:0.75rem; }
      .brand { font-weight:600; }
      hr { border:0; border-top:1px solid var(--border); margin:2rem 0; }
      ul { padding-left:1.25rem; }
      .muted { opacity:.7; }
    </style>
  </head>
  <body>
    <main>
      <slot />
      <Footer />
    </main>
  </body>
</html>
