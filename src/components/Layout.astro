---
const { title = 'Alex Mollard', description = 'C++ Systems Programmer', pageTitle } = Astro.props;
const fullTitle = pageTitle ? `${pageTitle} • ${title}` : title;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <style is:global>
      :root {
        --bg: #0d0f11;
        --text-normal: #e7e9ec;
        --text-dim: #9aa2af;
        --accent: #5b8aff;
        --accent-bg: color-mix(in srgb, var(--accent) 15%, transparent);
        --surface-1: #14171a;
        --surface-2: #1b1f23;
        --surface-3: #23272d;
        --border: #2d333a;
        --danger: #ff5f56;
        --warn: #ffbd2e;
        --ok: #27c93f;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', Arial, sans-serif;
        --radius: .85rem;
      }
      @media (prefers-color-scheme: light) {
        :root {
          --bg: #fcfcfd;
          --text-normal: #222; 
          --text-dim: #5a6372;
          --surface-1: #fff;
          --surface-2: #f4f6f8;
          --surface-3: #eceff3;
          --border: #d7dce2;
        }
      }
      *, *::before, *::after { box-sizing:border-box; }
      html, body { margin:0; padding:0; background:var(--bg); color:var(--text-normal); -webkit-font-smoothing: antialiased; }
      body { font-size:16px; line-height:1.4; }
      a { color: var(--accent); }
      img { max-width:100%; display:block; }
      code, pre { font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace; font-size:.85rem; }
      pre { background: var(--surface-2); padding:1rem; border:1px solid var(--border); border-radius:var(--radius); overflow:auto; }
      h1,h2,h3,h4 { font-weight:600; line-height:1.15; letter-spacing:-.5px; }
      h2 { font-size: clamp(1.85rem, 3.5vw, 2.4rem); margin:3rem 0 1.25rem; }
      ::selection { background: var(--accent); color:#fff; }
      .content-frame { width:100%; max-width:1120px; margin:0 auto; padding:0 1.2rem 5rem; }
      header.site { display:flex; align-items:center; justify-content:space-between; padding:1rem 1.2rem; max-width:1120px; margin:0 auto; }
      header.site nav a { text-decoration:none; margin-left:1.15rem; font-size:.85rem; color:var(--text-dim); font-weight:500; }
      header.site nav a:hover { color: var(--text-normal); }
      footer.site { padding:3rem 1.2rem 4rem; max-width:1120px; margin:0 auto; font-size:.75rem; color:var(--text-dim); }
      footer.site a { color:inherit; text-decoration:none; }
      .grid { display:grid; gap:1.1rem; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); }
      .section-lead { font-size:1.05rem; color:var(--text-dim); max-width:62ch; line-height:1.55; }
      .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, 'Liberation Mono', monospace; }
      .pill { display:inline-block; padding:.35rem .6rem; background:var(--surface-2); font-size:.65rem; font-weight:600; letter-spacing:.5px; text-transform:uppercase; border-radius:2rem; border:1px solid var(--border); color:var(--text-dim); }
      .fade-in { animation: fade .7s ease both; }
      @keyframes fade { from { opacity:0; transform:translateY(4px);} }
    </style>
  </head>
  <body>
    <header class="site">
      <div class="logo" style="font-weight:600; letter-spacing:-.5px;">AM<span style="color:var(--accent);">()</span></div>
      <nav>
        <a href="#projects">Projects</a>
        <a href="#expertise">Expertise</a>
        <a href="#contact">Contact</a>
        <a href="/resume.pdf">Résumé</a>
      </nav>
    </header>
    <main class="content-frame">
      <slot />
    </main>
    <footer class="site">
      <div>© {new Date().getFullYear()} Alex Mollard • Built with Astro</div>
    </footer>
  </body>
</html>
