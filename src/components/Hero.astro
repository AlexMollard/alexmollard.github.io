---
const { title = 'Alex Mollard', tagline = 'C++ Systems Programmer', description = 'Low-latency, high-reliability software engineering: performance-critical backends, realtime systems, toolchains.' } = Astro.props;
---
<section class="hero">
  <div class="inner">
    <h1>{title}</h1>
    <p class="tagline">{tagline}</p>
    <p class="description">{description}</p>
    <div class="cta-row">
      <a href="#projects" class="btn primary">Featured Work</a>
      <a href="mailto:alex@mollard.dev" class="btn">Contact</a>
      <a href="/resume.pdf" class="btn subtle">Résumé</a>
    </div>
  </div>
</section>
<style>
.hero { padding: 5rem 1.25rem 3rem; text-align:center; }
.hero .inner { max-width: 860px; margin: 0 auto; }
.hero h1 { font-size: clamp(2.75rem, 6vw, 4.25rem); letter-spacing: -1px; margin:0 0 1rem; font-weight:700; }
.tagline { font-size: 1.375rem; font-weight:500; margin:0 0 1rem; color: var(--text-dim); }
.description { font-size:1.05rem; line-height:1.6; margin:0 auto 1.75rem; color: var(--text-normal); max-width: 56ch; }
.cta-row { display:flex; flex-wrap:wrap; gap:.75rem; justify-content:center; }
.btn { --bg: var(--surface-2); --fg: var(--text-normal); display:inline-block; padding:.75rem 1.15rem; border-radius: .55rem; text-decoration:none; font-weight:500; border:1px solid var(--border); background:var(--bg); color:var(--fg); transition:.2s background, .2s color, .2s border-color, .2s transform; font-size:.95rem; }
.btn:hover { background:var(--surface-3); }
.btn:active { transform:translateY(2px); }
.btn.primary { --bg: var(--accent); --fg: #fff; border-color: var(--accent); }
.btn.primary:hover { filter:brightness(1.1); }
.btn.subtle { background:transparent; }
@media (prefers-color-scheme: light) {
  .btn.primary { --fg:#fff; }
}
</style>
