---
export interface Props {
  name: string;
  blurb: string;
  stack?: string[];
  link?: string;
  repo?: string;
}
const { name, blurb, stack = [], link, repo } = Astro.props as Props;
---
<article class="project">
  <header>
    <h3>{link ? <a href={link}>{name}</a> : name}</h3>
  </header>
  <p>{blurb}</p>
  {stack.length > 0 && <ul class="stack">{stack.map(s => <li>{s}</li>)}</ul>}
  <footer class="links">
    {link && <a href={link} class="ext">Live</a>}
    {repo && <a href={repo} class="ext">Code</a>}
  </footer>
</article>
<style>
.project { padding:1.1rem 1.15rem 1.25rem; background:var(--surface-2); border:1px solid var(--border); border-radius:.85rem; display:flex; flex-direction:column; gap:.6rem; position:relative; }
.project h3 { font-size:1.15rem; margin:0; }
.project h3 a { text-decoration:none; }
.project p { margin:.2rem 0 .2rem; line-height:1.5; font-size:.9rem; color:var(--text-dim); }
.stack { list-style:none; padding:0; margin:0; display:flex; flex-wrap:wrap; gap:.35rem .5rem; }
.stack li { font-size:.65rem; letter-spacing:.5px; text-transform:uppercase; background:var(--surface-3); padding:.25rem .45rem; border-radius:.4rem; color:var(--text-dim); border:1px solid var(--border); }
.links { margin-top:auto; display:flex; gap:.75rem; font-size:.75rem; }
.links a { text-decoration:none; color:var(--accent); font-weight:500; }
.project:hover { border-color: var(--accent); }
</style>
